.container {
  display: block;
  padding: 0;
  min-height: 100vh;
  background: #f6f6f6;
}

.header-wrapper {
  display: flex;
  justify-content: center;
  height: 55vh;
  width: 100%;
  background: #9cf;
  padding-top: 0px;
  border-bottom-right-radius: 40px;
  border-bottom-left-radius: 40px;
  box-sizing: border-box;
  flex-direction: column;
}

.header-image {
  width: 100%;
  height: 40%;
}

.content-text {
  font-size: 28rpx;
  color: rgb(37, 35, 35);
  padding: 10px;
}

.content-wrapper {
  position: absolute;
  top: 48vh;
  left: 15px;
  height: 50vh;
  min-height: 200px;
  width: calc(100% - 30px);
  padding: 15px;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0px 0px 3px #fff;
  color: #818181;
}

.title {
  margin: 10px 0;
  text-align: center;
  font-size: 16px;
}

.content-input {
  margin-top: 50px;
  font-size: 25rpx;
  color: #9cf;
  width: 100%;
}

.section-input {
  margin-top: 25px;
  position: relative;
}

.form-input {
  padding-top: 10px;
  height: 80rpx;
  border: 1px solid #ededed;
  padding-left: 10px;
  border-radius: 5px;
  font-size: 14px;
}

.disabled {
  background: #ededed;
  padding-left: 82px;
  color: #000;
}

.placeholder {
  color: #ababab;
}

.section-btn {
  position: absolute;
  width: calc(100% - 40px);
  bottom: 60px;
}
